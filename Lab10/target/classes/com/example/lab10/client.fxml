<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab10.Client">
   <children>
      <Label layoutX="32.0" layoutY="45.0" text="Username: ">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="32.0" layoutY="79.0" text="Message:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="userNameField" layoutX="144.0" layoutY="46.0" />
      <TextField fx:id="messageField" layoutX="144.0" layoutY="80.0" />
      <Button fx:id="sendButton" layoutX="83.0" layoutY="155.0" mnemonicParsing="false" onAction="#onSend" onKeyPressed="#onSend" prefHeight="27.0" prefWidth="74.0" style="-fx-background-color: lightgreen;" text="Send">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="206.0" layoutY="153.0" mnemonicParsing="false" onAction="#onExit" prefHeight="26.0" prefWidth="58.0" style="-fx-background-color: #ff4d4d;" text="Exit" />
      <Label layoutX="83.0" layoutY="235.0" prefHeight="18.0" prefWidth="226.0" text="(1) Type username and Message" />
      <Label layoutX="83.0" layoutY="260.0" prefHeight="18.0" prefWidth="174.0" text="(2) Click on Send button ONCE" />
      <Label layoutX="83.0" layoutY="279.0" prefHeight="42.0" prefWidth="430.0" text="(3) Put your cursor in Message Field and press Enter" />
      <Label layoutX="192.0" layoutY="200.0" lineSpacing="2.0" prefHeight="27.0" prefWidth="202.0" text="Please follow these steps" underline="true">
         <font>
            <Font size="18.0" />
         </font>
         <effect>
            <Glow level="0.44" />
         </effect>
      </Label>
   </children>
</AnchorPane>
