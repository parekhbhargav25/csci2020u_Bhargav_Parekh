<VBox alignment="CENTER" prefHeight="1000.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab04.Lab04Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="UserName" />
   <TextField fx:id="userName" prefHeight="26.0" prefWidth="398.0" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
   <TextField fx:id="pass" accessibleRole="PASSWORD_FIELD" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="154.0" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Full Name" />
   <TextField fx:id="fullName" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email Address" />
   <TextField fx:id="email" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phone number" />
   <TextField fx:id="phonenum">
      <effect>
         <Glow />
      </effect>
   </TextField>
   <Text layoutX="221.0" layoutY="374.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date of birth" />
   <DatePicker fx:id="dob" />
   <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSubmitButton" text="Submit">
      <font>
         <Font size="21.0" />
      </font>
   </Button>
    <Label fx:id="welcomeText" />
